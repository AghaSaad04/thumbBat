<!DOCTYPE HTML>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="icon" type="image/png" sizes="16x16" href="./assets/favicon-16x16.png">
    <link rel="stylesheet" href="static/css/login.css">
    <link rel="stylesheet" href="static/css/style.css">
    <title>ThumbBat</title>
</head>

<body>

    <!-- Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable " role="document">
            <div class="modal-content">
                <div id="signInDiv">
                    <div class="modal-header">
                        <h5 class="modal-title" id="loginTitle">Sign in</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="leftCol">
                                <div class="question">
                                    <input type="text" id="userId" required />
                                    <label>Email Address</label>
                                </div>
                                <div class="question">
                                    <input type="password" id="userPass" required />
                                    <label>Password</label>
                                </div>
                                <a class="resetPass" href="#" onclick="sendPasswordReset()"> Reset Password
                                </a>
                                <div class="alert alert-danger error" id="loginError" role="alert">

                                </div>
                                <div class="alert alert-success" id="successLog" role="alert">
                                    <h4 class="alert-heading">Login Successful</h4>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-modal login" onclick="login(event)">Sign
                            in</button>
                        <button type="button" class="btn btn-modal signUp" id="toggleSignUp">Sign
                            Up</button>
                    </div>
                </div>

                <div id="signUpDiv">
                    <div class="modal-header">
                        <h5 class="modal-title" id="loginTitle">Sign Up</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="leftCol">
                                <div class="question">
                                    <input type="text" id="userIdUP" required />
                                    <label>Email Address</label>
                                </div>
                                <div class="question">
                                    <input type="password" id="userPassUP" required />
                                    <label>Password</label>
                                </div>
                                <div class="alert alert-danger error" id="loginErrorUP" role="alert">
                                </div>
                                <div class="alert alert-success" id="successUP" role="alert">
                                    <h5 class="alert-heading">Signup Successful</h5>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-modal login" id="toggleSignIn">Sign in</button>
                        <button type="button" class="btn btn-modal signUp" onclick="signUp(event)">Sign
                            Up</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <button class="btn btn-play" type="submit" data-toggle="modal" data-target="#loginModal">Login</button>

    <section class="intro">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <div class="intro">
                        <h1>Plane Invaders</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="mainBack">
            <div class="load">
                <p class="welcome">
                    Login or Continue as a Guest to Play the Game
                </p>
            </div>
            <div class="form">
                <form class="login-form" method="POST" action="/login">
                    <input type="text" placeholder="username" name="username" required />
                    <input type="password" placeholder="password" name="password" required />
                    <button type="submit">login</button>
                </form>
                <form method="GET" action="/signup">
                    <p class="message">Not registered?</p>
                    <button class="leftbtn" type="submit">Signup</button>
                </form>
                <form method="POST" action="/login">
                    <button type="submit" class="rightbtn">Login as Guest</button>
                </form>
            </div>
        </div>
    </div>




    <script src=" static/js/client.js"> </script>
    <script src="static/js/bootstrap.min.js"></script>
</body>

</html>